<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding-top: 5rem;
        position: relative;
        overflow: hidden;
    }

    #particles-js {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
        pointer-events: none;
    }

    .container {
        position: relative;
        z-index: 2;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(to right, var(--text), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--text);
        opacity: 0.8;
        margin-bottom: 2rem;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .contact-info p {
        margin: 0;
        font-size: 1.1rem;
        color: var(--text);
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-links a {
        color: var(--text);
        transition: color 0.2s ease;
    }

    .social-links a:hover {
        color: var(--accent);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 1.25rem;
        }
    }
</style>
