<style>
    h2 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
        color: var(--text);
    }

    h3 {
        font-size: 1.75rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
    }

    h4 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        color: var(--text);
    }

    .skills-container {
        display: grid;
        gap: 2rem;
    }

    .skills-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(2, 1fr);
    }

    .skill-category {
        margin-bottom: 1.5rem;
    }

    .skill-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        background-color: var(--accent-light);
        color: var(--text);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.9rem;
        font-weight: 500;
    }



    @media (max-width: 1024px) {
        .skills-container {
            grid-template-columns: 1fr;
        }
    }

    .certifications-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .cert-item {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.3));
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .cert-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(var(--accent-rgb), 0.1), transparent);
        transform: translateX(-100%);
        transition: transform 0.6s ease;
    }

    .cert-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 20px -6px rgba(0, 0, 0, 0.15);
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.5));
    }

    .cert-item:hover::before {
        transform: translateX(100%);
    }

    .cert-icon {
        font-size: 1.75rem;
        min-width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--accent), var(--accent-light));
        color: white;
        border-radius: 1rem;
        padding: 0.5rem;
        box-shadow: 0 4px 8px -2px rgba(var(--accent-rgb), 0.3);
        transform: rotate(-5deg);
        transition: transform 0.3s ease;
    }

    .cert-item:hover .cert-icon {
        transform: rotate(0deg);
    }

    .cert-content {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .cert-name {
        font-weight: 500;
        color: var(--text);
    }

    .cert-id, .cert-type, .cert-issuer {
        font-size: 0.875rem;
        color: var(--accent);
        opacity: 0.8;
    }

    .certifications-section {
        grid-column: 1 / -1;
        background: var(--card-bg);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .certifications-section h4 {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @media (max-width: 1024px) {
        .certifications-list {
            grid-template-columns: 1fr;
            max-width: 600px;
        }
    }

    @media (max-width: 768px) {
        .skills-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
