<section id="education" class="section">
    <div class="container">
        <h2>Education</h2>
        <div class="education-container">
            <div class="card education-card">
                <div class="education-header">
                    <div class="education-info">
                        <h3>Master's Degree in Computer Science</h3>
                        <p class="institution">BK Birla College, Mumbai University</p>
                        <p class="location">Kalyan (W)</p>
                    </div>
                    <div class="education-meta">
                        <p class="duration">2023 - 2024</p>
                        <p class="grade">CGPA: 9.1 (2nd Rank)</p>
                    </div>
                </div>
            </div>
            <div class="card education-card">
                <div class="education-header">
                    <div class="education-info">
                        <h3>Bachlors's Degree in Computer Science</h3>
                        <p class="institution">Satish Pradhan Dnyansadhna College, Mumbai University</p>
                        <p class="location">Thane (W)</p>
                    </div>
                    <div class="education-meta">
                        <p class="duration">2018 - 2020</p>
                        <p class="grade">CGPA: 7.1</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    h2 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
        color: var(--text);
    }

    .education-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .education-card {
        transition: transform 0.2s ease;
    }

    .education-card:hover {
        transform: translateY(-2px);
    }

    .education-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 2rem;
    }

    .education-info h3 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--accent);
    }

    .institution {
        font-size: 1.1rem;
        font-weight: 500;
        margin: 0 0 0.25rem 0;
    }

    .location {
        font-size: 0.9rem;
        color: var(--text);
        opacity: 0.8;
        margin: 0;
    }

    .education-meta {
        text-align: right;
    }

    .duration {
        font-weight: 500;
        margin: 0 0 0.25rem 0;
    }

    .grade {
        color: var(--accent);
        font-weight: 600;
        margin: 0;
    }

    @media (max-width: 640px) {
        .education-header {
            flex-direction: column;
            gap: 1rem;
        }

        .education-meta {
            text-align: left;
        }
    }
</style>
